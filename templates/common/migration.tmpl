package db

import "errors"

func Migrate() error {
    if DB == nil {
        return errors.New("db: database client is nil")
    }

    {{ if eq .Config.DBKind "sqlite" -}}
        if err := DB.Exec("PRAGMA foreign_keys = OFF").Error; err != nil {
            return err
        }
    {{- end  }}

    if err := DB.AutoMigrate(
        {{- range .Schema.Tables }}
        &{{ .Name }}{},
        {{- end }}
    ); err != nil {
        return err
    }

    {{ if eq .Config.DBKind "sqlite" -}}
        if err := DB.Exec("PRAGMA foreign_keys = ON").Error; err != nil {
            return err
        }
    {{- end  }}
    return nil
}
