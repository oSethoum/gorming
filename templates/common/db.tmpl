package db

import (
	"log"
	"os"

	{{ if eq .Cofig.DBKind "sqlite" }}
	"fmt"
	"github.com/oSethoum/sqlite"
	{{ end }}
	{{ if eq .Cofig.DBKind "mysql" }}
	"gorm.io/driver/mysql"
	{{ end }}
	{{ if eq .Cofig.DBKind "postgres" }}
	"gorm.io/driver/postgres"
	{{ end }}
	"gorm.io/gorm"
	"gorm.io/gorm/logger"
)

var Client *gorm.DB

func Init() {
	os.MkdirAll("./data", 07777)
	{{ if eq .Cofig.DBKind "sqlite" }}
	dsn := fmt.Sprintf("file:%s?_fk=1&_pragma_key=%s&_journal_mode=WAL", "./data/db.sqlite", "")
	dialect := sqlite.Open(dsn)
	{{ end }}

	{{ if eq .Cofig.DBKind "mysql" }}
	dsn := "user:pass@tcp(127.0.0.1:3306)/dbname?charset=utf8mb4&parseTime=True&loc=Local"
	dialect := mysql.Open(dsn)
	{{ end }}
	{{ if eq .Cofig.DBKind "postgres" }}
	dsn := "host=localhost user= password= dbname= port=5432 sslmode=disable"
	dialect := postgres.Open(dsn)
	{{ end }}
	client, err := gorm.Open(dialect, &gorm.Config{
		PrepareStmt:                              true,
		Logger:                                   logger.Default.LogMode(logger.Info),
	})

	if err != nil {
		log.Fatalln(err)
	}

	Client = client
	migrate()
}

func Close() {
	conn, _ := Client.DB()
	conn.Close()
}
